@page 
@model NorthwindWeb.Pages.CustomerModel 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row"> 
    <h1 class="display-2">Customer</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr><th>Company Name</th></tr>
        </thead>
        <tbody>
            @foreach (string name in Model.Customers)
            {
                <tr><td>@name</td></tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <p>Enter a name for a new supplier:</p>
    <form method="POST">
        <div><input asp-for="Customer.ContactName"></div>
        <input type="submit">
    </form>
</div>